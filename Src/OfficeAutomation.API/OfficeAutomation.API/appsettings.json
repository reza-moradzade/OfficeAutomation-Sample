{
  // ==========================
  // Database connection string
  // ==========================
  "ConnectionStrings": {
    "OfficeAutomationDB": "Server=(localdb)\\MSSQLLocalDB;Database=OfficeAutomationDB;Trusted_Connection=True;TrustServerCertificate=True;"
  },

  // ==========================
  // JWT authentication settings
  // ==========================
  "Jwt": {
    "Key": "this_is_a_very_long_secure_key_123456", // Secret key for signing JWTs
    "Issuer": "YourIssuer", // Token issuer
    "Audience": "YourAudience", // Token audience
    "DurationMinutes": 1 // Token expiration in minutes
  },

  // ==========================
  // Scheduled tasks configuration
  // ==========================
  "ScheduledTasks": {
    "CleanupIntervalMinutes": 30, // How often to run cleanup tasks
    "ArchiveIntervalHours": 24, // How often to run archive tasks
    "ArchiveOlderThanDays": 30 // Tasks older than this will be archived
  },

  // ==========================
  // Authentication lockout policy
  // ==========================
  "Auth": {
    "LockoutMinutes": 1, // Duration of temporary lockout after failed attempts
    "MaxFailedAttempts": 3 // Maximum failed login attempts allowed
  }
}
