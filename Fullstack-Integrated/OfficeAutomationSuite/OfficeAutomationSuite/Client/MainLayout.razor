@inherits LayoutComponentBase
@inject NavigationManager Navigation

<div class="main-layout">
    <div class="sidebar">
        <h3>Office Automation</h3>
        <ul>
            <li><NavLink href="/home" class="nav-link" activeClass="active">Home</NavLink></li>
            <li><NavLink href="/cartable" class="nav-link" activeClass="active">Cartable</NavLink></li>
            <li><button class="nav-link logout-btn" @onclick="Logout">Logout</button></li>
        </ul>
    </div>

    <div class="main-content">
        <header class="top-header">
            <div class="left">Office Automation</div>
            <div class="right">User: reza moradzade</div>
        </header>

        <div class="content">
            @Body
        </div>
    </div>
</div>
@code {
    private void Logout()
    {
        Navigation.NavigateTo("/");
    }
}
<style>
    .main-layout {
        display: flex;
        min-height: 100vh;
    }

    /* Sidebar */
    .sidebar {
        width: 220px;
        background: #2c3e50;
        color: white;
        padding: 20px;
    }

        .sidebar h3 {
            margin-bottom: 20px;
            font-weight: normal;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
        }

            .sidebar ul li {
                margin-bottom: 15px;
            }

    .nav-link {
        color: white;
        text-decoration: none;
    }

        .nav-link.active {
            font-weight: bold;
        }

    /* Main content */
    .main-content {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    /* Header */
    .top-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 15px 20px;
        background: #34495e;
        color: white;
        font-weight: bold;
    }

    /* Content area */
    .content {
        flex: 1;
        padding: 20px;
        background: #ecf0f1;
    }

    .nav-link {
        color: white;
        text-decoration: none;
        padding: 5px 10px;
        display: block;
        border-radius: 5px;
    }

        .nav-link:hover {
            background-color: #3d566e;
        }

        .nav-link.active {
            background-color: #1abc9c; /* رنگ دلخواه برای آیتم فعال */
            color: white;
            font-weight: bold;
        }

    .logout-btn {
        background: none;
        border: none;
        color: white;
        text-align: left;
        padding: 5px 10px;
        width: 100%;
        cursor: pointer;
        font-size: 1rem;
        border-radius: 5px;
    }

        .logout-btn:hover {
            background-color: #3d566e; /* همون افکت hover مثل NavLink */
        }

</style>
