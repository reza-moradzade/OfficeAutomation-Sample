<input type="checkbox" title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu" />

<div class="nav-scrollable @(collapseNavMenu ? "collapse" : "")" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="home">
                <span class="bi bi-house-door-fill" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="cartable">
                <span class="bi bi-list-nested" aria-hidden="true"></span> Cartable
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="#" @onclick="Logout">
                <span class="bi bi-box-arrow-right" aria-hidden="true"></span> Logout
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private void ToggleNavMenu() => collapseNavMenu = !collapseNavMenu;

    [Inject] private IAuthService AuthService { get; set; } = default!;
    [Inject] private AuthState AuthState { get; set; } = default!;
    [Inject] private NavigationManager NavigationManager { get; set; } = default!;

    private async Task Logout()
    {
        await AuthService.LogoutAsync();
        AuthState.IsAuthenticated = false;
        AuthState.Token = null;
        AuthState.UserName = null;
        AuthState.FullName = null;

        NavigationManager.NavigateTo("/login", true);
    }
}
